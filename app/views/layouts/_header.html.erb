<header class="navbar navbar-expand-lg navbar-dark">
  <div class="container">
    <%= link_to "えんアプリ", root_path, id: "logo" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon collapse-close"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
        <% if parent_logged_in? %>
          <li class="nav-item"><%= link_to "トップ　", root_path, class: "nav-link text-white" %></li>
          <li class="nav-item"><%= link_to "園児情報", current_parent, class: "nav-link text-white" %></li>
          <li class="nav-item"><%= link_to "基本情報編集", edit_parent_path(current_parent),class: "nav-link text-white" %></li>
          <li class="nav-item">
            <%= link_to "ログアウト", parent_logout_path, method: :delete, class: "nav-link text-white" %>
          </li>
        <% elsif teacher_logged_in? %>
          <li class="nav-item"><%= link_to "出欠園児一覧", teacher_path(current_teacher), class: "nav-link text-white" %></li>
          <li class="nav-item"><%= link_to "担当園児一覧", all_children_teacher_path(current_teacher), class: "nav-link text-white" %></li>
          <li class="nav-item"><%= link_to "保育者一覧", teachers_path, class: "nav-link text-white" %></li>
          <li class="nav-item"><%= link_to "保護者一覧", parents_path, class: "nav-link text-white" %></li>
          <li class="nav-item"><%= link_to "基本情報編集", edit_teacher_path(current_teacher), class: "nav-link text-white" %></li>
          <li class="nav-item">
            <%= link_to "ログアウト", teacher_logout_path, method: :delete, class: "nav-link text-white" %>
          </li>
        <% else %>
          <li class="nav-item"><%= link_to "ログイン", root_path, class: "nav-link text-white" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
