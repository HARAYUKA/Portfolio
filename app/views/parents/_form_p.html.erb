<%= form_with(model: @parent, local: true) do |f| %>
  <%= render 'shared/error_messages', object: @parent %>

  <%= f.label :name, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email, class: "label-#{yield(:class_text)}" %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :phone_number, class: "label-#{yield(:class_text)}" %>
  <%= f.phone_field :phone_number, class: "form-control" %>

  <%= f.label "園児との関係性", class: "label-#{yield(:class_text)}" %>
  <%= f.select :relationship, ['母', '父', '祖母', '祖父', 'おば', 'おじ'], {include_blank: '選択してください'}, class: "form-control" %>

  <%= f.label :password, class: "label-#{yield(:class_text)}" %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation, class: "label-#{yield(:class_text)}" %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
  <%= link_to "キャンセル", root_path, class: "btn btn-secondary btn-block" %>
<% end %>