<% provide(:class_text, 'manag-info') %>
<% provide(:button_text, '更新') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <h1 class="modal-title">編集画面</h1>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <%= form_with(model: @parent, url: update_manag_info_parent_path(@parent), local: true, method: :patch) do |f| %>
            <%= render 'shared/error_messages', object: @parent %>
          
            <%= f.label :name, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :name, class: "form-control", disabled: true %>
          
            <%= f.label :email, class: "label-#{yield(:class_text)}" %>
            <%= f.email_field :email, class: "form-control", disabled: true %>

            <%= f.label :relationship, class: "label-#{yield(:class_text)}" %>
            <%= f.select :relationship, ['母', '父', '祖母', '祖父', 'おば', 'おじ'], {include_blank: '選択してください'}, class: "form-control", disabled: true %>
          
            <%= f.label :child_class, class: "label-#{yield(:class_text)}" %>
            <%= f.select :child_class, ['ひよこ', 'あひる', 'ぺんぎん'], {include_blank: false}, class: "form_control" %>
          
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
              <button type="button" class="btn btn-light btn-<%= yield(:class_text) %>" data-dismiss="modal">
                キャンセル
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>