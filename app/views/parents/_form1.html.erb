<%= form_with(model: @child, local: true) do |f| %>
  <%= render 'shared/error_messages', object: @child %>

  <%= f.label :child_name, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :child_name, class: "form-control" %>

  <%= f.label :age, class: "label-#{yield(:class_text)}" %>
  <%= f.email_field :age, class: "form-control" %>

  <%= f.label :birth, class: "label-#{yield(:class_text)}" %>
  <%= f.date_select(
      :birth,
      start_yerar: 2000,
      end_year: (Time.now.year - 18),
      default: Date.new(2000, 1, 1),
      date_separator: '/'), class: "form-control" %>

  <%= f.label :class_name, class: "label-#{yield(:class_text)}" %>
  <%= f.password_field :class_name, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>