<% provide(:title, @teacher.name) %>
<h1><%= @teacher.name %> 先生</h1>

<h3>担当園児一覧（<%= @classroom[:class_name] %>）</h3>

<!--担当園児一覧テーブル-->
<div>
  <table class="table table-bordered table-striped table-condensed" id="index-children">
    <tr>
      <th>名前</th>
      <th>月齢</th>
      <th>誕生日</th>
      <th>性別</th>
      <th>連絡帳一覧</th>
    </tr>

    <% @all_children.each do |child| %>
      <tr>
        <td><%= child.child_name %></td>
        <td><%= child.age %></td>
        <% if child.birthday != nil %>
          <td><%= l(child.birthday, format: :default) %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= child.gender_i18n %></td>
        <td><%= link_to "一覧", index_attendance_teacher_path(@teacher, child), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </table>
</div>